<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Produto | Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #3498db;
            --accent-color: #28a745;
        }
        
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .card {
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border: none;
        }
        
        .card-header {
            background-color: var(--primary-color);
            color: white;
            border-radius: 10px 10px 0 0 !important;
            padding: 1.5rem;
        }
        
        .card-header h1 {
            margin-bottom: 0;
            font-size: 1.8rem;
        }
        
        .card-body {
            padding: 2rem;
        }
        
        .form-control, .form-select {
            padding: 0.75rem 1rem;
            border-radius: 8px;
            border: 1px solid #ced4da;
            transition: all 0.3s;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--secondary-color);
            box-shadow: 0 0 0 0.25rem rgba(52, 152, 219, 0.25);
        }
        
        .btn-submit {
            background-color: var(--accent-color);
            border: none;
            padding: 0.75rem 2rem;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .btn-submit:hover {
            background-color: #218838;
            transform: translateY(-2px);
        }
        
        .image-preview-container {
            border: 2px dashed #dee2e6;
            border-radius: 8px;
            padding: 1rem;
            text-align: center;
            margin-bottom: 1.5rem;
            transition: all 0.3s;
        }
        
        .image-preview-container:hover {
            border-color: var(--secondary-color);
        }
        
        #imagemPreview {
            max-width: 100%;
            max-height: 300px;
            border-radius: 8px;
            margin: 1rem auto;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        }
        
        .input-group-text {
            background-color: var(--primary-color);
            color: white;
            border: none;
        }
        
        .form-label {
            font-weight: 500;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }
        
        .required-field::after {
            content: " *";
            color: #dc3545;
        }
        
        @media (max-width: 768px) {
            .card-header h1 {
                font-size: 1.5rem;
            }
            
            .card-body {
                padding: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-pencil-square me-3" style="font-size: 1.8rem;"></i>
                            <h1 class="mb-0">Editar Produto</h1>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/produtos/edicao/<%= produto.id %>" enctype="multipart/form-data" id="productForm">
                            <!-- Nome do Produto -->
                            <div class="mb-4">
                                <label for="productName" class="form-label required-field">Nome do Produto</label>
                                <input type="text" class="form-control" id="productName" name="title" 
                                       value="<%= produto.title %>" placeholder="Ex: Maçã Fuji, Cesta de Palha..." autocomplete="off" required>
                                <div class="invalid-feedback">Por favor, insira o nome do produto.</div>
                            </div>
                            
                            <!-- Preço e Categoria -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label for="productPrice" class="form-label required-field">Preço</label>
                                    <div class="input-group">
                                        <span class="input-group-text">R$</span>
                                        <input type="text" class="form-control" id="productPrice" name="price" 
                                               value="<%= typeof produto.price === 'number' ? produto.price.toFixed(2).replace('.', ',') : String(produto.price).replace('.', ',') %>" 
                                               placeholder="0,00" autocomplete="off" required>
                                        <div class="invalid-feedback">Por favor, insira um preço válido.</div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <label for="productCategory" class="form-label required-field">Categoria</label>
                                    <select class="form-select" id="productCategory" name="category" required>
                                        <option value="Frutas" <%= produto.category === 'Frutas' ? 'selected' : '' %>>Frutas</option>
                                        <option value="Verduras" <%= produto.category === 'Verduras' ? 'selected' : '' %>>Verduras</option>
                                        <option value="Legumes" <%= produto.category === 'Legumes' ? 'selected' : '' %>>Legumes</option>
                                        <option value="Artesanato" <%= produto.category === 'Artesanato' ? 'selected' : '' %>>Artesanato</option>
                                    </select>
                                    <div class="invalid-feedback">Por favor, selecione uma categoria.</div>
                                </div>
                            </div>
                            
                            <!-- Estoque e Descrição -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <label for="productStock" class="form-label required-field">Estoque</label>
                                    <input type="number" class="form-control" id="productStock" name="stock" 
                                           min="0" value="<%= produto.stock %>" placeholder="Quantidade disponível" autocomplete="off" required>
                                    <div class="invalid-feedback">Por favor, insira a quantidade em estoque.</div>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <label for="productDescription" class="form-label">Descrição do Produto</label>
                                <textarea class="form-control" id="productDescription" name="description" 
                                          rows="4" placeholder="Descreva as características do produto..."><%= produto.description %></textarea>
                            </div>
                            
                            <!-- Upload de Imagem -->
                            <div class="mb-4">
                                <label for="inputImagem" class="form-label">Imagem do Produto</label>
                                <div class="image-preview-container">
                                    <% if (produto.image) { %>
                                        <img id="imagemPreview" src="<%= produto.image %>" alt="Imagem atual do produto">
                                        <div class="mt-3">
                                            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="document.getElementById('inputImagem').click()">
                                                <i class="bi bi-arrow-repeat me-2"></i>Alterar Imagem
                                            </button>
                                        </div>
                                    <% } else { %>
                                        <div id="uploadArea">
                                            <i class="bi bi-image" style="font-size: 2rem; color: #6c757d;"></i>
                                            <p class="mt-2">Arraste e solte uma imagem aqui ou clique para selecionar</p>
                                            <button type="button" class="btn btn-outline-primary mt-2" onclick="document.getElementById('inputImagem').click()">
                                                <i class="bi bi-upload me-2"></i>Selecionar Imagem
                                            </button>
                                        </div>
                                        <img id="imagemPreview" src="" alt="Nova imagem do produto" style="display: none;">
                                    <% } %>
                                    <input type="file" class="form-control-file d-none" id="inputImagem" 
                                           accept="image/*" name="image">
                                </div>
                            </div>
                            
                            <!-- Botões -->
                            <div class="d-flex justify-content-between pt-3">
                                <a href="/admin/produtos" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left me-2"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-submit">
                                    <i class="bi bi-check-circle me-2"></i>Salvar Alterações
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Preview da imagem
        const inputImagem = document.getElementById('inputImagem');
        const imagemPreview = document.getElementById('imagemPreview');
        const uploadArea = document.getElementById('uploadArea');
        
        if (inputImagem) {
            inputImagem.addEventListener('change', function() {
                const arquivo = this.files[0];
                if (arquivo) {
                    const leitor = new FileReader();
                    leitor.onload = function(e) {
                        imagemPreview.src = e.target.result;
                        imagemPreview.style.display = 'block';
                        if (uploadArea) uploadArea.style.display = 'none';
                    }
                    leitor.readAsDataURL(arquivo);
                }
            });
        }
        
        // Drag and drop para imagem
        const previewContainer = document.querySelector('.image-preview-container');
        
        if (previewContainer) {
            previewContainer.addEventListener('dragover', (e) => {
                e.preventDefault();
                previewContainer.style.borderColor = '#3498db';
                previewContainer.style.backgroundColor = 'rgba(52, 152, 219, 0.1)';
            });
            
            previewContainer.addEventListener('dragleave', () => {
                previewContainer.style.borderColor = '#dee2e6';
                previewContainer.style.backgroundColor = '';
            });
            
            previewContainer.addEventListener('drop', (e) => {
                e.preventDefault();
                previewContainer.style.borderColor = '#dee2e6';
                previewContainer.style.backgroundColor = '';
                
                if (e.dataTransfer.files.length) {
                    inputImagem.files = e.dataTransfer.files;
                    const event = new Event('change');
                    inputImagem.dispatchEvent(event);
                }
            });
        }
        
        // Formatação do preço
        const priceInput = document.getElementById('productPrice');
        const form = document.getElementById('productForm');
        
        if (priceInput) {
            priceInput.addEventListener('input', function() {
                // Remove tudo que não é dígito
                let value = this.value.replace(/\D/g, '');
                
                // Converte para centavos (ex: 1234 → 12.34)
                value = (value/100).toFixed(2);
                
                // Formata como moeda brasileira
                this.value = formatCurrency(value);
            });
            
            // Função para formatar como moeda brasileira
            function formatCurrency(value) {
                return parseFloat(value).toLocaleString('pt-BR', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                });
            }
        }
        
        // Validação antes do envio
        if (form) {
            form.addEventListener('submit', function(e) {
                // Remove a formatação antes de enviar
                if (priceInput) {
                    const rawPrice = priceInput.value.replace(/\./g, '').replace(',', '.');
                    priceInput.value = rawPrice;
                    
                    // Valida se o preço é um número válido
                    if (isNaN(parseFloat(rawPrice))) {
                        e.preventDefault();
                        priceInput.classList.add('is-invalid');
                        const errorDiv = priceInput.nextElementSibling;
                        errorDiv.textContent = 'Por favor, insira um preço válido';
                        errorDiv.style.display = 'block';
                        return;
                    }
                }
                
                // Validação geral do formulário
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                
                form.classList.add('was-validated');
            });
        }
    </script>
</body>
</html>